{% extends "base.html.twig" %}

{% block body %}
	<h1 class='center-text mb1r'>Votre profil</h1>
	<Div class="box-container">
		<div class="container-form">
			{{form_start(form)}}
			<div class="group-form">
				<fieldset class='flex flex-column full-size'>
					<legend>Informations personnelles</legend>
					<div class="form-group">
						{{form_row(form.nom)}}
					</div>
					<div class="form-group">
						{{form_row(form.prenom)}}
					</div>
					<div class="form-group">
						{{form_row(form.tel_portable)}}
					</div>
					<div class="form-group">
						{{form_row(form.tel_fixe)}}
					</div>
				</fieldset>
			</div>
			<div class="group-form">
				<fieldset class='flex flex-column full-size'>
					<legend>Informations de l'entreprise</legend>
					<div class="form-group">
						{{ form_row(form.organisation.siret, {'attr': {'readonly': true} }) }}
					</div>
					<div class="form-group">
						{{ form_row(form.organisation.designation_sociale, {'attr': {'readonly': true} }) }}
					</div>
					<div class="form-group">
						{{form_row(form.organisation.email)}}
					</div>
					<div class="form-group">
						{{form_row(form.organisation.phone)}}
					</div>
					<div class="form-group">
						{{form_row(form.organisation.rue)}}
					</div>
					<div class="form-group">
						{{form_row(form.organisation.code_postal)}}
					</div>
					<div class="form-group">
						{{form_row(form.organisation.ville)}}
					</div>
				</fieldset>
			</div>
			<div class='box-btn flex'>
				<button type="submit" class="btn btn-principal margin-auto">Enregistrer mes informations</button>
			</div>
			{{form_end(form)}}
		</div>

	</Div>
{% endblock %}
